{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": false,
    "skipLibCheck": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "jsx": "preserve",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],          // preferred form
      "@/src/*": ["src/*"],      // backward-compat for imports like "@/src/components/..."
      "@/lib/*": ["lib/*"],      // your root-level lib/
      "@/src/lib/*": ["lib/*"]   // backward-compat for "@/src/lib/supabaseServer"
    },

    "types": ["node"],
    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "src/**/*", "lib/**/*", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", "dist"]
}
