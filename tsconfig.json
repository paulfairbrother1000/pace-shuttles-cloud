{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],

    // Keep builds lenient for now
    "strict": false,
    "skipLibCheck": true,
    "noEmit": true,

    // Module/JSX settings compatible with Next 13+/15
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",

    // Interop & defaults that prevent common TS import/JSX hiccups
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,

    // Base URL + alias
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // Useful ambient types
    "types": ["node"],

    // Next.js TypeScript plugin
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}
{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
